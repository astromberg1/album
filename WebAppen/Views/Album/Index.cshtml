@model List<AlbumVM>
@{
    ViewBag.Title = "Album";
}

@if (User.Identity.IsAuthenticated)
    {
    <div>
        <h3>  @Html.ActionLink("Nytt album", "Create", "Album", null, new { id = "createalbumbtn" })</h3>
        <p>

            @if (ViewData["AlbumInfo"] != null)
                {
                @ViewData["AlbumInfo"]
                }
        </p>
    </div>
    }
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-2">
        @Html.LabelFor(m => m[0].Name)
    </div>
    <div class="col-md-2">

        @Html.LabelFor(m => m[0].DateCreated)
    </div>
    <div class="col-md-2">
        @Html.Label("Creator")
    </div>
    <div class="col-md-2">
        @Html.LabelFor(m => m[0].Name)
    </div>
    <div class="col-md-2">
        @Html.Label("Navigation")
    </div>
</div>
<div id="albumlistcontainer">

    @*@Html.Action("AlbumList")*@
    @Html.Partial("_albumListView")

</div>
@section scripts{
    <script src="~/Scripts/albumlist.js"></script>
}
