@model IEnumerable<CommentsVM>

@foreach (var comment in Model)
    {
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>@comment.User.FullName</strong> <span class="text-muted">commented @comment.DatePosted</span>

            </div>
            <div class="panel-body">
                <h4>@comment.Title</h4>

                <p>
                    @comment.Comment
                </p>
            </div>
            @if (User.Identity.IsAuthenticated && comment.User.Email == User.Identity.Name)
                {
                <div class="panel-footer text-muted">
                    @Html.ActionLink("Delete", "Delete", "Comment", new { }, new { @class = "deletecommentbtn text-muted", id = comment.id })
                </div>
                <div id="test">

                </div>
                }
        </div>
    </div>
    }

