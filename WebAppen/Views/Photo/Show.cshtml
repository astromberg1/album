@model IEnumerable<PhotoVM>




<div class="row">
    @if (Model.Count() != 0)
        {

        foreach (var photo in Model)
            {
            <div class="col-md-3">
                <a href='@Url.Action("Details", "Photo", photo)'>
                    <img src="@Url.Content($"{photo.Path}")" alt="@photo.Description" style="width: 300px" class="img-thumbnail" />
                </a>
            </div>
            }
        }
    else
        {
        <h2>Empty Album!</h2>
        }
</div>
<div class="row" id="testing">

</div>
<div class="row">
    <p class="col-md-12">
        @Html.ActionLink("Tillbaka till listan", "Index", "Album")
    </p>
</div>